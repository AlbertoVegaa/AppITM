<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_p5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Pantalla F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_below="@id/text_p5"
        android:id="@+id/imagen"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/acerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textswitcher"
        android:gravity="center"
        android:text="Acerca de mi:" />
    <TextSwitcher
        android:id="@+id/textswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordetexto"
        android:layout_below="@id/imagen"
        android:layout_margin="10dp"
        />
    <TextSwitcher
        android:id="@+id/biografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordetexto"
        android:layout_below="@id/textswitcher"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:layout_below="@id/biografia"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:scrollbars="vertical"
        android:background="@drawable/bordetexto"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>